set -e

L10N_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd)

rm -fR ${L10N_DIR}/mo/*

for file in $(find ${L10N_DIR}/po -name '*.po'); do
	file=$(basename "${file}" | cut -d '.' -f 1)
	echo "Compiling machine object file: ${file}.po"
	msgfmt --strict --no-hash -o ${L10N_DIR}/mo/${file}.mo ${L10N_DIR}/po/${file}.po
done
